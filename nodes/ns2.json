{
  "name": "ns2",
  "chef_environment": "production",
  "normal": {
    "knife_zero": {
      "host": "ns2.e17k.com"
    },
    "firewall": {
      "ufw": {
        "defaults": {
          "ipv6": "yes",
          "manage_builtins": "no",
          "ipt_sysctl": "/etc/ufw/sysctl.conf",
          "ipt_modules": "nf_conntrack_ftp nf_nat_ftp nf_conntrack_netbios_ns",
          "policy": {
            "input": "DROP",
            "output": "ACCEPT",
            "forward": "DROP",
            "application": "SKIP"
          }
        }
      },
      "rules": [
        {
          "ns_tcp": {
            "port": 53,
            "protocol": "tcp"
          }
        },
        {
          "ns_udp": {
            "port": 53,
            "protocol": "udp"
          }
        }
      ]
    },
    "poise-python": {
      "options": {
        "pip_version": "18.0"
      }
    }
  },
  "automatic": {
    "fqdn": "ns2.e17k.com",
    "platform": "ubuntu",
    "platform_version": "16.04"
  },
  "run_list": [
    "recipe[locale::default]",
    "recipe[build-essential::default]",
    "recipe[ufw::default]",
    "recipe[ntp::default]",
    "recipe[poise-python::default]",
    "recipe[latest-git::default]",
    "recipe[dotfiles::default]",
    "recipe[nsd::slave]"
  ]
}